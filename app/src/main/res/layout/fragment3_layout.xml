<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/create_tournament_page3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<!--        <TextView-->
<!--            android:id="@+id/create_tournament_label"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:fontFamily="@font/inter_medium"-->
<!--            android:text="@string/create_tournament"-->
<!--            android:textColor="@color/app_orange"-->
<!--            android:textSize="25sp"-->
<!--            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/tournament_team_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/team_number"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/team_num"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/tournament_team_num"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/team_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="20dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingBottom="20dp"
                android:textSize="30sp"
                android:background="@drawable/team_num"
                />

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:onClick="onPreviousClick"
                android:src="@drawable/ic_previous" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:onClick="onNextClick"
                android:src="@drawable/ic_next" />

        </RelativeLayout>


        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button_selector"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/create"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>
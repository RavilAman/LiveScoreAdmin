<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black">

    <LinearLayout
        android:id="@+id/fragment_statistics_group_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fragment_statistics_back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/app_black"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_chevron_left_24"
            app:tint="@color/light_grey" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fragment_statistics_tournament_logo"
            android:layout_width="@dimen/tournament_logo_size"
            android:layout_height="@dimen/tournament_logo_size"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/tournament"
            app:shapeAppearanceOverlay="@style/rounded_image_view"
            app:strokeColor="@null"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_statistics_tournament_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tournament_name"
                android:textColor="@color/white"
                android:textSize="@dimen/tournament_name_text_size" />

            <TextView
                android:id="@+id/fragment_statistics_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group"
                android:textColor="@color/white"
                android:textSize="@dimen/tournament_location_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_statistics_tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_statistics_group_info"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/matches"
            android:textColor="@color/white"
            android:textSize="@dimen/statistics_label_sizes" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/table"
            android:textColor="@color/white"
            android:textSize="@dimen/statistics_label_sizes" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/player_stats"
            android:textColor="@color/white"
            android:textSize="@dimen/statistics_label_sizes" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/team_stats"
            android:textColor="@color/white"
            android:textSize="@dimen/statistics_label_sizes" />

    </LinearLayout>

    <View
        android:id="@+id/fragment_statistics_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/fragment_statistics_tabs_container"
        android:layout_marginTop="5dp"
        android:background="@color/divider_dark_grey" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_statistics_group_statistics_recycler_vew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_statistics_divider"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

</RelativeLayout>
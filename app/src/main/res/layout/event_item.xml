<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_black"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="10dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:fontFamily="@font/inter_medium"
            android:text="Time"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/event_item_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_item_player_team_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:text="Player name"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/event_item_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_item_assist_team_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:text="Assist name"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/event_item_event_logo_team_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/soccer_ball" />

    </LinearLayout>

    <TextView
        android:id="@+id/event_item_game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Score"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/event_item_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_item_event_logo_team_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/soccer_ball" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_item_player_team_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="7"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:text="Player name"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/event_item_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_item_assist_team_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:text="Assist name"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/event_item_edit_event"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@color/rainbow1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/white" />

    </LinearLayout>

</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MineLiveScoreUser" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="rounded_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="RadioButtonNoIndicator" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>